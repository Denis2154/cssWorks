<header class="header">

        <div>
          {{>logo}}
        </div>

        <nav class="header_nav">
          <div class="header_nav_right">
            {{>nav list=header isVertical=false}}
          </div>
        </nav>
</header>

{{#with main}}
<div class="main">

 <img src="{{image}}" alt="Main image" class="main_image">

 <div class="main_content">
   <h1 class="main_title">{{heading}}</h1>
   <p class="main_text">{{description}}</p>
  
  <a href="{{href}}" class="main_button">
    <div class="main_button_text">
    {{button}}
    </div>
    </a>

 </div>
</div>
{{/with}}

<main class="featured_box">
  {{#each featured}}
    <div class="featured_card">
      <img src="{{photo}}" alt="Featured_image" class="featured_card_image">
      <h2 class="featured_card_title">{{heading}}</h2>
      <p class="featured_card_text">{{info}}</p>
      <a href="{{linkUrl}}" class="button featured_card_button">{{linkText}}</a>
    </div>
  {{/each}}
</main>

<div class="actions_form">
   {{#each actions}}
      <div class="actions_form_block">
        <label class="actions_form_label">{{heading}}</label>
        <a href="{{url}}" class="actions_form_button">{{text}}</a>
      </div>
   {{/each}}
</div>

      <footer class="footer">

        <div>
          {{>logo}}
          <span class="footer_copyright">Copyright 2023-2024</span>
        </div>

        {{#each footer}}
        <div>
          <span class="footer_title">{{title}}</span>
          {{>nav list=links isVertical=true}}
        </div>
        {{/each}}

      </footer>



