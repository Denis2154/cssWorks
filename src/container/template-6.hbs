<header class="header">

        <div>
          {{>logo}}
        </div>

        <nav class="header_nav">
          <div class="header_nav_right">
            {{>nav list=header isVertical=false}}
          </div>
        </nav>

</header>

<main class="main">
  
  {{#with info}}
    <div class="info">
     <h1 class="info_title">{{title}}</h1>
     <p class="info_text">{{description}}</p>
    </div>
  {{/with}}

  {{#with form}}
   <form class="form">
     <h2 class="form_title">{{title}}</h2>

     <div class="form_input_list">
      {{#each inputs}}
        <input type="{{text}}" placeholder='{{placeholder}}' class="form_input" name="{{name}}" id="form_input-{{id}}">
      {{/each}}
     </div>

     <div class="form_checkbox">
      <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
      <div></div>
      <label For="{{checkbox.name}}">{{checkbox.label}}</label>
     </div>

     <button type="submit"class="form_button">{{button}}</button>
    <p class="form_info">{{info}}</p>
   </form>
  {{/with}}

</main>

{{#with updates}}
<div class="block">
  
  <h6 class="updates_title">{{title}}</h6>
  
  <div class="list">
   {{#each list}}
     <div class="list_items">
      <div class="photo"></div>
     
      <div class="text">
        <span class="nickname">{{nickname}}</span>
        <p class="description">{{description}}</p>
      </div>

     </div>
   {{/each}}
  </div>

  {{#with show_all}}
  <div class="show_all">
    <a href="{{url}}" class="link">{{text}}</a>
  </div>
  {{/with}}

</div>
{{/with}}

{{#with expirience}}
<div class="block_footer">
   <div class="block_footer_header">
     <div class="block_footer_title">{{title}}</div>
     <div class="badge_hot">
     <span class="badge">{{badge}}</span>
     </div>
   </div>

   <div class="feedback">
     {{#each list}}
       <div class="card">
          <div class="feedback_title">{{name}}</div>
          <div class="feedback_info">{{details}}</div>
       </div>
     {{/each}}
   </div>

</div>
{{/with}}



<footer class="footer">

        <div>
          {{>logo}}
          <span class="footer_copyright">Copyright 2023-2024</span>
        </div>

        {{#each footer}}
        <div>
          <span class="footer_title">{{title}}</span>
          {{>nav list=links isVertical=true}}
        </div>
        {{/each}}

</footer>



